<div id="message-<%= message.id %>">

  <% if message.user == current_user %>
    <div class="d-flex justify-content-end mb-2">
      <p class="message-content-user py-1 px-4 mx-3"><%=message.content %></p>
    </div>
  <%else %>
    <p class="m-0 text-danger"><%= message.user.first_name %></p>
    <div class="d-flex justify-content-start mb-2">
      <%= cl_image_tag message.user.photo.key, class: "avatar" %>
      <p class="message-content py-1 px-4 mx-3"><%=message.content %></p>
    </div>
  <% end %>
</div>
