<div class="container">


<h2> Dashbboard index 2  </h2>

<div class="container">

<div class="d-flex justify-content-around">
<strong><%= link_to "Mes trajets précédents", mybookings_path(@bookings), class:"", style:"font-size: 12px"  %></strong>
<%= link_to "Mes trajets en cours", dashboard_path(@bookings), class:"", style:"font-size: 12px" %>
</div>


  <%@bookings.each do |booking| %>
    <div class="card mb-3" style="max-width: 540px">
      <div class="row g-0">
        <div class="col-4">
          <%= image_tag "pieton.png"%>
        </div>
        <div class="col-6">
            <div class="card-body">
              <h5 class="card-title"></h5>
              <p class="card-text"> départ :<strong> <%=booking.trip.starting_point %></strong> </p>
              <p class="card-text"> arrivée :<strong> <%=booking.trip.ending_point  %> </strong> </p>
              <p class="card-text"> Date :<strong> <%= booking.trip.date %> </strong> </p>
              <p class="card-text"> Heure :<strong> <%= booking.trip.time %> </strong> </p>
              <p class="card-text"><small class="text-muted"></small></p>
            </div>
        </div>
        <div class="col-2">
        <button class="btn btn-danger">Details</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
