<div class="row px-5 py-4">
    <%@trips.each do |trip| %>
      <div class="col-12 card-trips">
        <div class="card-trip mb-3">
          <div class="card-trip-title">
            <h2 class="text-dark"><strong><span id="pipe">|</span>  Trajet de <%= trip.user.first_name %></strong></h2>
          </div>
          <img src="https://cdn-assets.alltrails.com/static-map/production/at-map/50957820/trail-france-paris-paris-d-ouest-en-est-at-map-50957820-1642755268-414x200-2.png" />
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          <div class="mx-3 mb-5 card-trip-infos">
            <div class="d-flex justify-content-between">
              <p class = "mt-3"> Date : <strong><%= trip.date.mday %>/<%= trip.date.mon %> </strong> <i class="fa-solid fa-calendar"></i></p>
              <p class = "mb-3 mt-3"> Heure : <strong><%= trip.time.hour %>h<%= trip.time.min %></strong> <i class="fa-solid fa-clock"></i></p>
            </div>
            <div class="d-flex justify-content-between">
              <p class = "mb-3"> Amazones : <strong><%= trip.users.count%></strong> <i class="fa-solid fa-users"></i>   </p>
              <p class = "mb-3"> Transport : <i class="fa-solid fa-car"></i></p>
            </div>
            <%= link_to "Details", trip_path(trip), class: "button-yellow card-button" %>
          </div>
        </div>
      </div>
    <%end %>
  </div>
