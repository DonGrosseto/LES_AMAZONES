

<%= image_tag "logofinal.png", class: "small_logo"%>

<h3 class="p-2" style="font-size: 22px">Informations sur votre trajet</h3>

<div class="container">
  <h4 class= "text-center" style="color: #DC2440; font-size: 15px">Le <%= @trip.date.strftime("%m/%d/%Y") %> à <%= @trip.time.strftime("%H:%M") %></h4>
  <h3 class= "mt-2"> <%= @trip.starting_point.capitalize %> > <%= @trip.ending_point.capitalize %></h3>

  <div class="divider_bar_yellow my-2 ">
  </div>

  <div class="map">
    <div style="width: 100%; height: 200px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="divider_bar_yellow my-2 ">
  </div>

  <h6 class="mt-3"> Les amazones participantes</h6>
  <div class="container p-3">
    <% @trip.users.each do |user| %>
      <div class="d-flex m-2 justify-content-between">
        <div class="d-flex">
          <%= cl_image_tag user.photo.key, class: "avatar"%>
          <p class="m-2"><%= user.first_name %></p>
        </div>
        <p class="my-2">-</p>
        <p class="m-2"><span style="color: #DC2440" ><%= user.bookings.count %></span>
          <span style="font-weight: 400">trajets</span>

            <%# <%= user.bookings.ratings.status %>
           <%= "Non noté" %>
        <%= image_tag "Pouce-vert.png", style: "height:25px; width:25px" %>
        </p>
      </div>
    <%end  %>

  </div>
    <% if @booking  %>
      <div class="text-center"><%= link_to "Quitter le trajet", trip_booking_path(@trip, @booking), method: :delete, class: "button-red" %></div>
      <div class="text-center"><%= link_to "Chat", chatroom_path(@trip), class: "button-yellow" %></div>
    <% else %>
      <div class="text-center">
        <%= link_to "Rejoindre le trajet", trip_bookings_path(@trip), method: :post, class: "button-red" %>
      </div>
    <%end %>
</div>
