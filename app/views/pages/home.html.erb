<%= image_tag "logo.jpg", style: "width: 100%" %>

<div>
  <h1 class="text-center m-2">Les AMAZONES</h1>
</div>
<div>
  <p class="text-center">Girls Power</p>
  <p class="text-center"> Déplacez-vous en sécurité quand vous voulez !</p>
</div>

<div class="container mt-5" style="width: 80%">
<%= form_tag trips_path, method: :get do |f| %>
  <%= text_field_tag :starting_point,
    params[:starting_point] %>
    <%#= f.input :starting_point , placeholder: 'Départ', label: false %>
    <%#= f.input :ending_point, placeholder: 'Arrivée', label: false %>
    <%#= f.input :date, placeholder: 'Date', label: false, as: :date, html5: true%>
    <%#= f.input :time, label: false, as: :time,html5: true %>
    <div class="d-flex justify-content-around mt-4" style="height: 50px; width:85%; text-align: center; position:relative; left: 30px">
      <%= image_tag "pieton" %>
      <%= image_tag "velo" %>
      <%= image_tag "voiture" %>
      <%= image_tag "taxi" %>
      <%= image_tag "métro" %>
    </div>
    <div class="d-flex justify-content-around m-1" style="width:85%; text-align: center; position:relative; left: 20px" >

    </div>
    <div class="d-flex justify-content-center mt-5">
      <%=submit_tag "Rechercher", class: "btn-red" %>
    </div>
  <% end %>
</div>

<div class="navbar-amz d-flex w-100">
  <%= image_tag "etoile.png", width:"30px", height:"30px"%>
   <%= link_to "Créer un trajet", root_path  %>
   <%= link_to "Rechercher un trajet", root_path  %>
   <%= link_to "Mes trajets", root_path  %>
  <%= image_tag "c-18_1779.jpg", width:"30px", height:"30px"%>
 </div>
